{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2023",
    "skipLibCheck": true,

    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },

    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
